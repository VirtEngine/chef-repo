# generated upstart config

description "spark-notebook"
author "Andy Petrella"

# Stanzas
#
# Stanzas control when and how a process is started and stopped
# See a list of stanzas here: http://upstart.ubuntu.com/wiki/Stanzas#respawn

# When to start the service
start on runlevel [2345]


# When to stop the service
stop on runlevel [016]


# Automatically restart process if crashed. Tries 0 times every 60 seconds
respawn
respawn limit 0 60

pre-start script
	[ -d /var/run/spark-notebook ] || install -m 755 -o spark-notebook -g spark-notebook -d /var/run/spark-notebook
end script

# set the working directory of the job processes
chdir /usr/share/spark-notebook

# Start the process
script
  exec  bin/spark-notebook
end script


post-stop script
    exec rm RUNNING_PID
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" 
end script

